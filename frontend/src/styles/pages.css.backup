  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-primary);
}

.gallery-loading-modern p {
  color: var(--text-secondary);
  font-size: 1rem;
  margin: 0;
}

.gallery-empty-modern {
  text-align: center;
  padding: var(--spacing-2xl);
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-primary);
}

.empty-illustration-gallery {
  margin-bottom: var(--spacing-xl);
}

.empty-icon-gallery {
  width: 6rem;
  height: 6rem;
  color: var(--border-secondary);
  margin: 0 auto;
}

.empty-title-gallery {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 var(--spacing-md) 0;
}

.empty-description-gallery {
  font-size: 1rem;
  color: var(--text-muted);
  margin: 0 0 var(--spacing-xl) 0;
  line-height: 1.6;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.empty-cta-gallery {
  background: var(--color-primary);
  color: white;
  border: none;
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-lg);
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-normal);
}

.empty-cta-gallery:hover {
  background: var(--color-primary-hover);
  transform: translateY(-1px);
}

/* Pagination */
.gallery-pagination-modern {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-primary);
}

.gallery-pagination-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  background: var(--bg-tertiary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
  padding: 0.5rem 0.75rem;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: 0.875rem;
  font-weight: 500;
}

.gallery-pagination-btn:hover:not(:disabled) {
  background: var(--color-primary);
  color: white;
  border-color: var(--color-primary);
  transform: translateY(-1px);
}

.gallery-pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.gallery-pagination-btn.active {
  background: var(--color-primary);
  color: white;
  border-color: var(--color-primary);
}

.gallery-pagination-btn svg {
  width: 1rem;
  height: 1rem;
}

.pagination-pages {
  display: flex;
  gap: var(--spacing-xs);
}

/* Responsive Design */
@media (max-width: 768px) {
  .gallery-header-modern {
    padding: var(--spacing-lg);
  }
  
  .gallery-header-content {
    flex-direction: column;
    gap: var(--spacing-lg);
    align-items: stretch;
  }
  
  .gallery-title-modern {
    font-size: 1.5rem;
  }
  
  .gallery-stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .gallery-controls-modern {
    flex-direction: column;
    align-items: stretch;
  }
  
  .filter-row {
    flex-direction: column;
    align-items: stretch;
  }
  
  .gallery-search-group {
    max-width: none;
  }
  
  .gallery-view-toggle {
    align-self: center;
  }
  
  .gallery-grid-modern.grid {
    grid-template-columns: 1fr;
  }
  
  .gallery-grid-modern.list .gallery-card-modern {
    flex-direction: column;
  }
  
  .gallery-grid-modern.list .gallery-media-modern {
    width: 100%;
    height: 200px;
  }
  
  .gallery-pagination-modern {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .pagination-pages {
    order: -1;
  }
}

@media (max-width: 480px) {
  .gallery-container-modern {
    padding: 0 var(--spacing-sm);
  }
  
  .gallery-stats-grid {
    grid-template-columns: 1fr;
  }
  
  .gallery-stat-card {
    padding: var(--spacing-md);
  }
  
  .stat-number {
    font-size: 1.5rem;
  }
  
  .gallery-controls-modern {
    padding: var(--spacing-md);
  }
  
  .meta-row {
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .gallery-actions-modern {
    flex-direction: column;
  }
  
  .upvote-btn-modern {
    justify-content: center;
  }
} 

/* Permanent fix: Ensure stats icons and numbers are always visible */
.stats-card .stat-icon,
.stats-card .stat-value {
  color: var(--text-primary) !important;
}